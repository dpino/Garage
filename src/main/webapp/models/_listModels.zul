<window id="${arg.id}" title="Models List" width="100%">
    <grid id="models" model="@{controller.models}" mold="paging"
        pageSize="10" fixedLayout="true" width="100%">
        <columns>
            <column label="Name" sortDirection="ascending" />
            <column label="Trademark" sortDirection="ascending" />
            <column label="Power" sortDirection="ascending" />
            <column label="Operations" width="20%"/>
        </columns>
        <rows>
            <row self="@{each='model'}" value="@{model}"
                    onClick="controller.openEditForm(self.value)">
                <label value="@{model.name}" />
                <label value="@{model.trademark}" />
                <label value="@{model.power}" />
                <hbox>
                    <button label="Edit" tooltiptext="Edit"
                        onClick="controller.openEditForm(self.parent.parent.value)" />

                    <button label="Delete" tooltiptext="Delete"
                        onClick="controller.delete(self.parent.parent.value)" />
                </hbox>
            </row>
        </rows>
    </grid>

    <separator />

    <button label="Create" onClick="controller.openCreateForm()"/>
</window>
